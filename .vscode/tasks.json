{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build rgr program",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++11",
                "-Wall",
                "-Wextra",
                "-O2",
                "-g",
                "-o",
                "${workspaceFolder}/rgr_program",
                "${workspaceFolder}/main.cpp",
                "${workspaceFolder}/utils.cpp",
                "${workspaceFolder}/rsa.cpp",
                "${workspaceFolder}/book_cipher.cpp",
                "${workspaceFolder}/binary_cipher.cpp"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "clean build",
            "type": "shell",
            "command": "rm",
            "args": [
                "-f",
                "${workspaceFolder}/rgr_program"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "build and run",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++11",
                "-Wall",
                "-Wextra",
                "-O2",
                "-g",
                "-o",
                "${workspaceFolder}/rgr_program",
                "${workspaceFolder}/main.cpp",
                "${workspaceFolder}/utils.cpp",
                "${workspaceFolder}/rsa.cpp",
                "${workspaceFolder}/book_cipher.cpp",
                "${workspaceFolder}/binary_cipher.cpp",
                "&&",
                "${workspaceFolder}/rgr_program"
            ],
            "group": "none",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "clear": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++ сборка активного файла",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Задача создана отладчиком."
        }
    ]
}